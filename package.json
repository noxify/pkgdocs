{
  "name": "pkgdocs",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=24"
  },
  "packageManager": "pnpm@10.28.1",
  "author": {
    "name": "Marcus Reinhardt",
    "url": "https://github.com/noxify"
  },
  "scripts": {
    "dev": "turbo dev --filter='@pkgdocs/*'",
    "dev:site": "turbo dev --filter pkgdocs-site",
    "preview": "pnpm -F site preview",
    "build": "turbo build",
    "build:site": "turbo build --filter site",
    "build:pkg": "turbo build --filter='@pkgdocs/*' --filter=create-pkgdocs",
    "clean": "git clean -xdf node_modules",
    "clean:cache": "turbo clean:cache",
    "clean:workspaces": "turbo clean",
    "format": "turbo format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "sherif",
    "postinstall": "pnpm lint:ws",
    "typecheck": "turbo typecheck",
    "deps:check": "pnpm outdated -r",
    "deps:update": "pnpm update -i -L -r",
    "test": "vitest",
    "test:core": "pnpm -F core test",
    "cs": "changeset",
    "example:nextjs": "turbo dev --filter=...@pkgdocs/nextjs-example",
    "ci:publish": "pnpm build:pkg && pnpm publish -r --access public --publish-branch main && pnpm changeset tag",
    "ci:version": "pnpm changeset version && pnpm install --no-frozen-lockfile && git add ."
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@pkgdocs/prettier-config": "workspace:*",
    "@vitest/coverage-v8": "4.0.18",
    "@vitest/ui": "4.0.18",
    "prettier": "3.8.1",
    "sherif": "1.10.0",
    "turbo": "2.7.5",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "6.0.4",
    "vitest": "4.0.18"
  },
  "prettier": "@pkgdocs/prettier-config",
  "pnpm": {
    "overrides": {
      "@modelcontextprotocol/sdk@<1.25.2": ">=1.25.2"
    }
  }
}
